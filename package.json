{
  "name": "nw-builder",
  "version": "3.8.6-beta.1",
  "description": "Build NW.js desktop applications for Mac, Windows and Linux.",
  "keywords": [
    "NW.js",
    "Desktop",
    "Application"
  ],
  "author": "Steffen MÃ¼ller <steffen@mllrsohn.com>",
  "license": "MIT",
  "main": "./lib/index.cjs",
  "type": "module",
  "homepage": "https://github.com/nwutils/nw-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/nwutils/nw-builder.git"
  },
  "scripts": {
    "postinstall": "npm run build",
    "lnt": "eslint ./bin/**.cjs ./lib/**.cjs ./src/**.js",
    "e2e": "node --test-reporter=spec --test e2e/test.js",
    "test": "npm run test:unit && tape './test/*.cjs'",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "demo": "npm run build && node demo.cjs",
    "demo:cli": "nwbuild ./** --mode=build --platforms=linux32,linux64 --version=0.67.1",
    "build": "esbuild src/index.js --bundle --platform=node --outfile=./dist/index.cjs"
  },
  "devDependencies": {
    "cli-progress": "^3.12.0",
    "decompress-zip": "^0.3.3",
    "eslint": "^8.47.0",
    "eslint-config-tjw-jsdoc": "^1.0.3",
    "eslint-plugin-jsdoc": "^46.4.6",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jsdom": "^22.1.0",
    "nock": "^13.3.3",
    "redtape": "^1.0.0",
    "rimraf": "^3.0.2",
    "selenium-webdriver": "^4.11.1",
    "tape": "^5.6.6"
  },
  "dependencies": {
    "archiver": "^6.0.0",
    "compressing": "^1.9.1",
    "deprecate": "^1.1.1",
    "esbuild": "^0.19.2",
    "graceful-fs-extra": "^2.0.0",
    "inherits": "^2.0.4",
    "lodash": "^4.17.21",
    "plist": "^3.1.0",
    "rcedit": "^3.0.1",
    "request": "^2.88.2",
    "semver": "^7.5.4",
    "simple-glob": "^0.2.0",
    "temp": "^0.9.4",
    "thenify": "^3.3.1",
    "winresourcer": "^0.9.0",
    "winston": "^3.10.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": "v20.5.0"
  },
  "packageManager": "npm@9.8.1",
  "bin": {
    "nwbuild": "./bin/nwbuild.cjs"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "tjw-jsdoc"
    ],
    "overrides": [
      {
        "files": "./src/**/*.js"
      }
    ],
    "plugins": [
      "jsdoc"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
